{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer": [
        "lambda/products/layers/productsLayer/nodejs/productRepository"
      ],
      "/opt/nodejs/productEventsLayer": [
        "lambda/products/layers/productEventsLayer/nodejs/productEventRepository"
      ],
      "/opt/nodejs/ordersLayer": [
        "lambda/orders/layers/ordersLayer/nodejs/orderRepository"
      ],
      "/opt/nodejs/ordersApiLayer": [
        "lambda/orders/layers/ordersApiLayer/nodejs/orderApiRepository"
      ],
      "/opt/nodejs/orderEventsLayer": [
        "lambda/orders/layers/orderEventsLayer/nodejs/orderEvent"
      ],
      "/opt/nodejs/orderEventsRepositoryLayer": [
        "lambda/orders/layers/orderEventsRepositoryLayer/nodejs/orderEventRepository"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
